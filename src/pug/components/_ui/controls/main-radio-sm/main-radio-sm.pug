mixin main-radio-sm(data)
  .main-radio-sm
    label(for= data.id)
      .main-radio-sm__header
        img(src=`./assets/img/${data.img}.png` alt!= data.name width="100" height="200")
      
      .main-radio-sm__footer
        span.main-radio-sm__title!= data.name
    input(type="radio" id= data.id name!= data.ctrlName  value!= data.name checked= data.checked ? 'checked' : null)